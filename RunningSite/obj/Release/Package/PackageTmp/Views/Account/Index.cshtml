@model RunningSite.Models.Order

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section logged{

    @if (Session["name"] == null)
    {
        Response.Redirect(Url.Action("Login", "Account"));
    }
}

<div class="container">

    <h2>Account Homepage</h2>

    <p>
        @Html.ActionLink("Show Last Order Details", "ShowLastOrder", "Order")
    </p>

    <p>
        @Html.ActionLink("Make Changes to Festival Registration", "AlterOrder", "Order")
    </p>

    <p>
        @Html.ActionLink("Manage Account", "Manage", "Account")
    </p>

    <p>
        @Html.ActionLink("Give Feedback", "Feedback", "Feedback")
    </p>

</div>

