<!-- START OF MAIN CONTENT -->
<div class="container">
    <h2>ENQUIRIES</h2>
    <p>If you wish to make an enquiry, please call us at the number below or fill out the contact form and we will get back to you as soon as possible.</p>
    <!-- <br> -->
    <p>
        Address: 17 Main Road, Dingle, Ireland.
        <br>Ph No. +353 (0)66 1234567
    </p>
</div>
<div class="form-container">
    <h3>Contact Form</h3>

    @using (Html.BeginForm("ContactUs", "Contact", FormMethod.Post))
    {
        <p>
            @Html.ValidationSummary(false, "", new { style = "color:red;" })
        </p>

        <p>
            <span class="newline">
                @Html.LabelFor(c => c.Name, "*Name:")
            </span>
            @Html.TextBoxFor(c => c.Name, new { placeholder = "Your name.." })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(c => c.Email, "*Email:")
            </span>
            @Html.TextBoxFor(c => c.Email, new { placeholder = "Your email.." })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(c => c.Phone, "Phone:")
            </span>
            @Html.TextBoxFor(c => c.Phone, new { placeholder = "Your number.." })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(c => c.Message, "*Your Message:")
            </span>
            @Html.TextAreaFor(c => c.Message, new { placeholder = "Write something..", style = "height:200px" })
        </p>
        <p>
            <input id="Submit1" type="submit" value="Submit" />
            <input id="Reset1" type="reset" value="Reset" />
        </p>
    }


</div>
<!-- END OF MAIN CONTENT -->
